{
  "name": "qn-manager-pro",
  "version": "5.6.1",
  "description": "Hệ thống Quản lý Quân nhân Nội bộ - DHsystem (Stable Hardened Build)",
  "main": "main.js",
  "author": "DHsystem",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "dist": "npm run rebuild && electron-builder --win --portable",
    "clean": "rimraf node_modules release"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^6.0.0"
  },
  "build": {
    "appId": "com.dhsystem.qnmanager",
    "productName": "QuanLyQuanNhan",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable",
      "icon": "public/icon.ico"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*"
    ]
  }
}
