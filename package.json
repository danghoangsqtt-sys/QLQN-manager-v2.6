
{
  "name": "qn-manager-pro-dexie",
  "version": "7.0.0",
  "description": "Hệ thống Quản lý Quân nhân - Phiên bản Dexie.js (IndexedDB)",
  "main": "main.js",
  "author": "DHsystem",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win",
    "dist:portable": "electron-builder --win portable",
    "dist:installer": "electron-builder --win nsis",
    "clean": "rimraf release"
  },
  "dependencies": {
    "dexie": "^4.0.8",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "rimraf": "^6.0.0"
  },
  "build": {
    "appId": "com.dhsystem.qnmanager.v7.dexie",
    "productName": "QuanLyQuanNhan",
    "copyright": "Copyright © 2024 DHsystem",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Quản lý Quân nhân",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "createDesktopShortcut": true
    },
    "asar": true,
    "files": [
      "**/*",
      "!release/**/*",
      "!node_modules/electron/**/*",
      "!node_modules/electron-builder/**/*"
    ]
  }
}
