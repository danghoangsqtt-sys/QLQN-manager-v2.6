{
  "name": "qn-manager-pro-dexie",
  "version": "7.0.0",
  "description": "Hệ thống Quản lý Quân nhân - Phiên bản Dexie.js (IndexedDB)",
  "main": "main.js",
  "author": "DHsystem",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "start": "concurrently -k \"npm run dev\" \"wait-on tcp:3000 && npm run electron\"",
    "build": "tsc && vite build",
    "dist": "npm run build && electron-builder --win",
    "dist:portable": "npm run build && electron-builder --win portable",
    "dist:installer": "npm run build && electron-builder --win nsis",
    "clean": "rimraf release dist"
  },
  "dependencies": {
    "dexie": "^4.0.8",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.300.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "rimraf": "^6.0.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dhsystem.qnmanager.v7.dexie",
    "productName": "QuanLyQuanNhan",
    "copyright": "Copyright © 2024 DHsystem",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Quản lý Quân nhân",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "createDesktopShortcut": true
    },
    "asar": true,
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ]
  }
}